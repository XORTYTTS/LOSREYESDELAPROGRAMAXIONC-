// Definir el pin donde está conectado el LED
const int ledPin = 13;  // Pin GPIO13 en ESP32

void setup() {
  // Inicializar el pin como salida
  pinMode(ledPin, OUTPUT);
}

void loop() {
  // Encender el LED
  digitalWrite(ledPin, HIGH);  // El LED se enciende cuando el pin está en HIGH
  delay(3000);  // Esperar 3 segundos

  // Apagar el LED
  digitalWrite(ledPin, LOW);   // El LED se apaga cuando el pin está en LOW
  delay(3000);  // Esperar 3 segundos
}
